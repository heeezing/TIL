<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
	
	<!-- 어노테이션을 이용한 의존 관계 자동 설정을 위한 설정 -->
	<context:annotation-config/>
	
	<!-- [@Autowired] 어노테이션을 이용한 의존 관계 자동 설정 -->
	<bean id="monitor" class="kr.spring.ch16.SystemMonitor">
		<property name="periodType">
			<value>10</value>
		</property>
	</bean>
	<bean id="sender" class="kr.spring.ch16.SmsSender"/>
	
	<!-- [@Qualifier] 어노테이션을 이용한 자동 설정 제한 -->
	<!-- 같은 타입이어도 자동설정 제한으로 부가적인 식별자(main)를 넣음으로서 타입 체크의 문제점을 해결 가능 -->
	<bean id="systemMonitor" class="kr.spring.ch17.SystemMonitor2"/>
	<bean id="recorder1" class="kr.spring.ch17.Recorder">
		<qualifier value="main"/>
	</bean>
	<bean id="recorder2" class="kr.spring.ch17.Recorder"/>
	
	<!-- [@Resource] 어노테이션을 이용해서 의존 관계 자동 설정 -->
	<!-- bean객체의 이름과 프로퍼티명이 일치하면 의존 관계 주입 -->
	<bean id="homeController" class="kr.spring.ch18.HomeController"/>
	<bean id="camera1" class="kr.spring.ch18.Camera" p:number="1"/> <!-- bean의 name = 프로퍼티명인 경우-->
	<bean id="cameraz" class="kr.spring.ch18.Camera" p:number="2"/> <!-- 어노테이션에 따로 name을 지정한 경우 -->
	<bean id="camera3" class="kr.spring.ch18.Camera" p:number="3"/> <!-- 메서드에 어노테이션을 명시한 경우 -->
	
</beans>